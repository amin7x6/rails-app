<h1>Contact Page</h1>

<% if params[:name].present? %>
Hi, <%= params[:name] %>,Thank you for contacting us, We will contact you soon!!
<% end %><br><br>
<hr><br>

<%= form_tag contact_submit_path do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :message %>
    <%= text_area_tag :message %>
  </div><br>
  <%# will generates a submit button for the form with label 'Contact Us' %>
  <%= submit_tag 'Contact Us' %>
<% end %>
